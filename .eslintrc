{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "standard",
  "rules": {
    "indent": ["error", 4],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "semi": ["error", "always"],
    "eol-last": 0,
    "one-var": 0,
    "max-len": ["error", 120],
    "eqeqeq": ["warn", "always"]
  }
}